<Page x:Class="trpo7_voroshilov_pr.Pages.AppoinmentPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:trpo7_voroshilov_pr.Pages"
      xmlns:converters="clr-namespace:trpo7_voroshilov_pr.Converters"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AppoinmentPage"
      Background="{DynamicResource BackgroundApp}">

    <Page.Resources>
        <converters:AgeConverter x:Key="ageConverter"/>
        <converters:FullAgeConverter x:Key="fullAgeConverter"/>
    </Page.Resources>
    <Grid DockPanel.Dock="Top">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition Style="{StaticResource NoneHeight}"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Button Content="Назад"
                Grid.Column="0"
                Grid.Row="0"
                Style="{StaticResource BackButton}"
                Click="Back"/>

        <TextBlock Grid.Row="1"
                   Grid.ColumnSpan="2"
                   Grid.Column="0"
                   Style="{StaticResource TextBlockKey}">
            <Run Text="ФИО Пациента:"/>
            <Run Text="{Binding Name}"/>
            <Run Text="{Binding LastName}"/>
            <Run Text="{Binding MiddleName}"/>
        </TextBlock>
        <TextBlock Grid.Row="2"
                   Grid.Column="0"
                   Grid.ColumnSpan="2"
                   Style="{StaticResource TextBlockKey}">
            <Run Text="Дата рождения:"/>
            <Run Text="{Binding Birthday, StringFormat={}{0:dd.MM.yyyy}}"/>
            <Run Text="Возраст: "/>
            <Run Text="{Binding Birthday, Converter={StaticResource ageConverter}}"/>
            <Run Text="{Binding Birthday, Converter={StaticResource fullAgeConverter}}"/>
        </TextBlock>
        <TextBlock Grid.Row="3"
                   Grid.Column="0"
                   Grid.ColumnSpan="2"
                   Style="{StaticResource TextBlockKey}">
            <Run Text="Телефон:"/>
            <Run Text="{Binding PhoneNumber, StringFormat={}{0:# (###) ### ## ##}}"/>
        </TextBlock>
        <Label Grid.Row="4"
               Grid.Column="0"
               Content="Диагноз:"/>
        <TextBox Grid.Row="4"
                 Grid.Column="1"
                 Text="{Binding Diagnosis}"/>
        <Label Grid.Row="5"
               Grid.Column="0"
               Content="Рекомендации:"/>
        <TextBox Grid.Row="5"
                 Grid.Column="1"
                 Text="{Binding Recomendations}"/>

        <Button Grid.Row="6"
                Grid.Column="0"
                Content="Зарегистрировать прием"
                Click="RegisterAppointment"/>   
        <Button Grid.Row="6"
                Grid.Column="1"
                Content="Изменить информацию о пациенте"
                Click="EditInfo"/>
        <StackPanel Grid.Column="0"
                  Grid.Row="7"
                  Grid.ColumnSpan="2">
            <Label Content="{Binding FirstAppointment}"/>
            <ListView
                  ItemsSource="{Binding AppointmentStories}"
                  SelectedItem="{Binding SelectedAppointment}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Vertical">
                            <StackPanel Orientation="Horizontal">
                                <Label Content="ФИО Доктора:"/>
                                <Label Content="{Binding DoctorObj.Name}"/>
                                <Label Content="{Binding DoctorObj.LastName}"/>
                                <Label Content="{Binding DoctorObj.MiddleName}"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <Label Content="Дата:"/>
                                <Label Content="{Binding Date}"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <Label Content="Диагноз:"/>
                                <Label Content="{Binding Diagnosis}"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <Label Content="Рекомендации:"/>
                                <Label Content="{Binding Recomendations}"/>
                            </StackPanel>
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackPanel>
        <Button Content="Удалить"
                Grid.Column="0"
                Grid.ColumnSpan="2"
                Grid.Row="8"
                Style="{StaticResource DeleteButton}"
                Click="DeleteAppointment"/>
    </Grid>
</Page>
