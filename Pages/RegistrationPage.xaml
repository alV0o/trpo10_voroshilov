<Page x:Class="trpo7_voroshilov_pr.Pages.RegistrationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:trpo7_voroshilov_pr.Pages"
      xmlns:validators="clr-namespace:trpo7_voroshilov_pr.Validators"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RegistrationPage"
      Background="{DynamicResource BackgroundApp}">

    <Grid x:Name="RegisterDoctor">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button Content="Назад"
                Click="Back"
                Style="{StaticResource BackButton}"/>
        <Label Content="Введите фамилию:"
               Grid.Row="1"
               Grid.Column="0"/>
        <Label Content="Введите имя:"
               Grid.Row="2"
               Grid.Column="0"/>
        <Label Content="Введите отчество:"
               Grid.Row="3"
               Grid.Column="0"/>
        <Label Content="Введите специальность:"
               Grid.Row="4"
               Grid.Column="0"/>
        <Label Content="Придумайте пароль:"
               Grid.Row="5"
               Grid.Column="0"/>
        <Label Content="Повторите пароль:"
               Grid.Row="6"
               Grid.Column="0"/>
        <TextBlock Grid.Row="7"
                   Grid.Column="0"
                   Style="{StaticResource TextBlockKey}">
            <Run Text="Ваш ID: "/>
            <Run Text="{Binding ID, UpdateSourceTrigger=PropertyChanged}"/>
        </TextBlock>

        <StackPanel Grid.Row="1"
         Grid.Column="1">
            <TextBox
         x:Name="nameTextBox">
                <TextBox.Text>
                    <Binding Path="Name">
                        <Binding.ValidationRules>
                            <validators:ValidationOnlyText/>
                        </Binding.ValidationRules>
                    </Binding>
                </TextBox.Text>
            </TextBox>
            <ItemsControl Foreground="Red"
         FontSize="12"
         ItemsSource="{Binding ElementName=nameTextBox, Path=(Validation.Errors)}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding ErrorContent}" TextWrapping="Wrap"/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </StackPanel>
        <StackPanel Grid.Row="2"
        Grid.Column="1">
            <TextBox
        x:Name="lastnameTextBox">
                <TextBox.Text>
                    <Binding Path="LastName">
                        <Binding.ValidationRules>
                            <validators:ValidationOnlyText/>
                        </Binding.ValidationRules>
                    </Binding>
                </TextBox.Text>
            </TextBox>
            <ItemsControl Foreground="Red"
            FontSize="12"
            ItemsSource="{Binding ElementName=lastnameTextBox, Path=(Validation.Errors)}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding ErrorContent}" TextWrapping="Wrap"/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </StackPanel>
        <StackPanel Grid.Row="3"
        Grid.Column="1">
            <TextBox
        x:Name="middlenameTextBox">
                <TextBox.Text>
                    <Binding Path="MiddleName">
                        <Binding.ValidationRules>
                            <validators:ValidationOnlyText/>
                        </Binding.ValidationRules>
                    </Binding>
                </TextBox.Text>
            </TextBox>
            <ItemsControl Foreground="Red"
            FontSize="12"
            ItemsSource="{Binding ElementName=middlenameTextBox, Path=(Validation.Errors)}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding ErrorContent}" TextWrapping="Wrap"/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </StackPanel>
        <StackPanel Grid.Row="4"
                Grid.Column="1">
            <TextBox
                x:Name="specTextBox">
                <TextBox.Text>
                    <Binding Path="Specialisation">
                        <Binding.ValidationRules>
                            <validators:ValidationOnlyText/>
                        </Binding.ValidationRules>
                    </Binding>
                </TextBox.Text>
            </TextBox>
            <ItemsControl Foreground="Red"
                    FontSize="12"
                    ItemsSource="{Binding ElementName=specTextBox, Path=(Validation.Errors)}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding ErrorContent}" TextWrapping="Wrap"/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </StackPanel>
        <TextBox Grid.Row="5"
                 Grid.Column="1"
                 Text="{Binding Password, Mode=OneWayToSource}"/>
        <TextBox Grid.Row="6"
                 Grid.Column="1"
                 Text="{Binding RepeatPassword, Mode=OneWayToSource}"/>
        <Button Content="Зарегистрироваться"
                Grid.Row="7"
                Grid.Column="1"
                Click="RegisterNewDoctor"/>
    </Grid>
</Page>
