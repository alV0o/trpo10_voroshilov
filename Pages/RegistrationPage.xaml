<Page x:Class="trpo7_voroshilov_pr.Pages.RegistrationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:trpo7_voroshilov_pr.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RegistrationPage"
      Background="{DynamicResource BackgroundApp}">

    <Grid x:Name="RegisterDoctor">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button Content="Назад"
                Click="Back"
                Style="{StaticResource BackButton}"/>
        <Label Content="Введите фамилию:"
               Grid.Row="1"
               Grid.Column="0"/>
        <Label Content="Введите имя:"
               Grid.Row="2"
               Grid.Column="0"/>
        <Label Content="Введите отчество:"
               Grid.Row="3"
               Grid.Column="0"/>
        <Label Content="Введите специальность:"
               Grid.Row="4"
               Grid.Column="0"/>
        <Label Content="Придумайте пароль:"
               Grid.Row="5"
               Grid.Column="0"/>
        <Label Content="Повторите пароль:"
               Grid.Row="6"
               Grid.Column="0"/>
        <TextBlock Grid.Row="7"
                   Grid.Column="0"
                   Style="{StaticResource TextBlockKey}">
            <Run Text="Ваш ID: "/>
            <Run Text="{Binding ID, UpdateSourceTrigger=PropertyChanged}"/>
        </TextBlock>

        <TextBox Grid.Row="1"
                 Grid.Column="1"
                 Text="{Binding Name, Mode=OneWayToSource}"/>
        <TextBox Grid.Row="2"
                 Grid.Column="1"
                 Text="{Binding LastName, Mode=OneWayToSource}"/>
        <TextBox Grid.Row="3"
                 Grid.Column="1"
                 Text="{Binding MiddleName, Mode=OneWayToSource}"/>
        <TextBox Grid.Row="4"
                 Grid.Column="1"
                 Text="{Binding Specialisation, Mode=OneWayToSource}"/>
        <TextBox Grid.Row="5"
                 Grid.Column="1"
                 Text="{Binding Password, Mode=OneWayToSource}"/>
        <TextBox Grid.Row="6"
                 Grid.Column="1"
                 Text="{Binding RepeatPassword, Mode=OneWayToSource}"/>
        <Button Content="Зарегистрироваться"
                Grid.Row="7"
                Grid.Column="1"
                Click="RegisterNewDoctor"/>
    </Grid>
</Page>
