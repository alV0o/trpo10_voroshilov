<Page x:Class="trpo7_voroshilov_pr.Pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:trpo7_voroshilov_pr.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="400"
      Title="MainPage"
      Background="{DynamicResource BackgroundApp}">

    <DockPanel HorizontalAlignment="Center"
               LastChildFill="False">
        <Button Content="Назад"
                DockPanel.Dock="Top"
                Click="Back"
                Style="{StaticResource BackButton}"/>

        <Grid x:Name="InfoDoctor"
              DockPanel.Dock="Top">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Label Content="ФИО:"
                   Grid.Row="0"
                   Grid.Column="0"/>        
            <Label Content="Специальность:"
                   Grid.Row="1"
                   Grid.Column="0"/>
            <TextBlock Grid.Row="0"
                       Grid.Column="1"
                       Style="{StaticResource TextBlockKey}">
                <Run Text="{Binding Name}"/>
                <Run Text="{Binding LastName}"/>
                <Run Text="{Binding MiddleName}"/>
            </TextBlock>
            <Label Grid.Row="1"
                   Grid.Column="1"
                   Content="{Binding Specialisation}"/>
        </Grid>

        <Grid DockPanel.Dock="Top">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Style="{StaticResource NoneHeight}"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Button Content="Создать пациента"
                    Grid.Column="0"
                    Grid.Row="0"
                    Style="{StaticResource AddButton}"
                    Click="AddPatient"/>
            <Button Content="Начать прием"
                    Grid.Column="1"
                    Grid.Row="0"
                    Click="StartAppointment"/>
            <Button Content="Изменить информацию"
                    Grid.Column="2"
                    Grid.Row="0"
                    Click="EditInfo"/>
            <ListView Grid.Column="0"
                      Grid.ColumnSpan="3"
                      Grid.Row="1"
                      ItemsSource="{Binding Patients}"
                      SelectedItem="{Binding SelectedPatient}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Vertical">
                            <StackPanel Orientation="Horizontal">
                                <Label Content="ФИО:"/>
                                <Label Content="{Binding Name}"/>
                                <Label Content="{Binding LastName}"/>
                                <Label Content="{Binding MiddleName}"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <Label Content="Дата рождения:"/>
                                <Label Content="{Binding Birthday}"/>
                            </StackPanel>
                            <TextBlock Grid.Row="3">
                                <Run Text="Телефон:"/>
                                <Run Text="{Binding PhoneNumber, StringFormat={}{0:# (###) ### ## ##}}"/>
                            </TextBlock>
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <Button Content="Удалить"
                    Grid.Column="0"
                    Grid.ColumnSpan="3"
                    Grid.Row="2"
                    Style="{StaticResource DeleteButton}"
                    Click="DeletePatient"/>
        </Grid>
        <WrapPanel x:Name="StatusBar"
                   DockPanel.Dock="Bottom">
            <Label Content="Всего JSON файлов:"/>
            <Label Content="{Binding CountAll}"/>
            <Label Content="Всего докторов:"/>
            <Label Content="{Binding CountDoctors}"/>
            <Label Content="Всего пациентов:"/>
            <Label Content="{Binding CountPatients}"/>
        </WrapPanel>
    </DockPanel>
</Page>
