<Page x:Class="trpo7_voroshilov_pr.Pages.EditInfoPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:trpo7_voroshilov_pr.Pages"
      xmlns:validators="clr-namespace:trpo7_voroshilov_pr.Validators"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="EditInfoPage"
      Background="{DynamicResource BackgroundApp}">
    <Grid x:Name="UpdatePatient">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="40"/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Button Content="Назад"
                Grid.Row="0"
                Grid.Column="0"
                Style="{StaticResource BackButton}"
                Click="Back"/>

        <Label Grid.Row="1"
               Grid.Column="0"
               Content="Изменить фамилию:"/>
        <Label Grid.Row="2"
               Grid.Column="0"
               Content="Изменить имя:"/>
        <Label Grid.Row="3"
               Grid.Column="0"
               Content="Изменить отчество:"/>
        <Label Grid.Row="4"
               Grid.Column="0"
               Content="Изменить дату рождения:"/>
        <Label Grid.Row="5"
               Grid.Column="0"
               Content="Изменить телефон:"/>
        <Button Grid.Column="0"
                Grid.Row="6"
                Grid.ColumnSpan="2"
                Content="Сбросить"
                Click="ResetPatient"/>
        <Button Grid.Column="0"
                Grid.Row="7"
                Grid.ColumnSpan="2"
                Content="Сохранить"
                Click="SaveChanges"
                Style="{StaticResource AddButton}"/>
        <StackPanel Grid.Row="1"
                Grid.Column="1">
            <TextBox
                x:Name="nameTextBox">
                <TextBox.Text>
                    <Binding Path="Name">
                        <Binding.ValidationRules>
                            <validators:ValidationOnlyText/>
                        </Binding.ValidationRules>
                    </Binding>
                </TextBox.Text>
            </TextBox>
            <ItemsControl Foreground="Red"
                FontSize="12"
                ItemsSource="{Binding ElementName=nameTextBox, Path=(Validation.Errors)}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding ErrorContent}" TextWrapping="Wrap"/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </StackPanel>
        <StackPanel Grid.Row="2"
                Grid.Column="1">
            <TextBox
                x:Name="lastnameTextBox">
                <TextBox.Text>
                    <Binding Path="LastName">
                        <Binding.ValidationRules>
                            <validators:ValidationOnlyText/>
                        </Binding.ValidationRules>
                    </Binding>
                </TextBox.Text>
            </TextBox>
            <ItemsControl Foreground="Red"
                    FontSize="12"
                    ItemsSource="{Binding ElementName=lastnameTextBox, Path=(Validation.Errors)}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding ErrorContent}" TextWrapping="Wrap"/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </StackPanel>
        <StackPanel Grid.Row="3"
                Grid.Column="1">
            <TextBox
                x:Name="middlenameTextBox">
                <TextBox.Text>
                    <Binding Path="MiddleName">
                        <Binding.ValidationRules>
                            <validators:ValidationOnlyText/>
                        </Binding.ValidationRules>
                    </Binding>
                </TextBox.Text>
            </TextBox>
            <ItemsControl Foreground="Red"
                    FontSize="12"
                    ItemsSource="{Binding ElementName=middlenameTextBox, Path=(Validation.Errors)}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding ErrorContent}" TextWrapping="Wrap"/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </StackPanel>
        <StackPanel Grid.Row="4"
                Grid.Column="1">
            <DatePicker
                x:Name="birthdayTextBox"
                Language="RU-ru">
                <DatePicker.Text>
                    <Binding Path="Birthday"
                        Mode="TwoWay">
                        <Binding.ValidationRules>
                            <validators:ValidationBirthday/>
                        </Binding.ValidationRules>
                    </Binding>
                </DatePicker.Text>
            </DatePicker>
            <ItemsControl Foreground="Red"
        FontSize="12"
        ItemsSource="{Binding ElementName=birthdayTextBox, Path=(Validation.Errors)}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding ErrorContent}" TextWrapping="Wrap"/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </StackPanel>
        <StackPanel Grid.Row="5"
            Grid.Column="1">
            <TextBox
        x:Name="phoneTextBox">
                <TextBox.Text>
                    <Binding Path="PhoneNumber">
                        <Binding.ValidationRules>
                            <validators:ValidationPhone/>
                        </Binding.ValidationRules>
                    </Binding>
                </TextBox.Text>
            </TextBox>
            <ItemsControl Foreground="Red"
            FontSize="12"
            ItemsSource="{Binding ElementName=phoneTextBox, Path=(Validation.Errors)}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding ErrorContent}" TextWrapping="Wrap"/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </StackPanel>
    </Grid>
</Page>
